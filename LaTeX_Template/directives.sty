\newcommand{\PersianText}{\toggletrue{PersianToggle}\togglefalse{EnglishToggle}}

\newcommand{\CVText}{\toggletrue{CurriculumVitae}\togglefalse{Resume}}
\newcommand{\ResumeText}{\toggletrue{Resume}\togglefalse{CurriculumVitae}}

