% Page layout, LaTeX Package
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{pagelayout}

\RequirePackage{geometry}
\RequirePackage{fancyhdr}
\usepackage{lastpage} % useful but unstable package!


\newcommand{\pagelayout}{
% A4    210 x 297 mm
\geometry{a4paper, nohead, includefoot, total={190mm, 287mm}, left=10mm, top=5mm}
\pagestyle{fancy}
\fancyhf{}
\renewcommand{\headrulewidth}{0pt}
\iftoggle{EnglishToggle}{
  \fancyfoot[LE,RO]{Page \thepage \hspace{1pt} of \pageref{LastPage}}
  %\fancyfoot[LE,RO]{Page \thepage}
  \fancyfoot[LO,CE]{\directivesTestII, updated in \today}
}{}
\iftoggle{PersianToggle}{
  \fancyfoot[LE,RO]{\directivesTestII, در تاریخ \today \ به‌روز رسانی شد.}
  \fancyfoot[LO,CE]{صفحه \thepage \hspace{1pt} از \pageref{LastPage}}
  %\fancyfoot[LO,CE]{صفحه \thepage}
}{}
}
